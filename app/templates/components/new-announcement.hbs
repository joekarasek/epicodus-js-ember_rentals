{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
   <form>
     <div class="form-group">
       <label for="text">Text</label>
       {{input value=text id="text"}}
     </div>

     <div class="form-group">
       <label for="monkeySauce">monkeySauce</label>
       {{input value=monkeySauce id="monkeySauce"}}
     </div>

     <button {{action 'save'}}>Save</button>
   </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
